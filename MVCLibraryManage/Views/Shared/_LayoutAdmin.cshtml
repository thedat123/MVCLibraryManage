<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewData["Title"] - CheeseBurger</title>
	<link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/js/bootstrap.min.js" asp-append-version="true" />
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
	<link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/layout-admin.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/manage-user.css" asp-append-version="true" />
</head>
<body>
	<header class="header">
		<div class="container-fluid">
			<nav class="header__navbar">
				<a asp-page="" class="header__navbar-admin">AdminHub</a>
				<a asp-page="">
				</a>
			</nav>
		</div>
	</header>
	<div class="background">
		<div class="main__form-detail">
			<div class="main__sliderbar">
				<div class="account">
					<div class="account-detail categories__item">
						<p class="account-name">
							@{
								var name = Context.Session.GetString("Name");
								@name
								;
							}
						</p>
					</div>
				</div>
				<ul class="categories__list">
					<li class="categories__item" id="customer">
						<a class="nav-link" asp-controller="Staff" asp-action="ReturnItemStatus">
							<i class="fas fa-users fa-fw me-3"></i><span>Quản lý trả hàng</span>
						</a>
					</li>
					<li class="categories__item " id="partner">
						<a class="nav-link" asp-controller="Staff" asp-action="ManageLibraryItem">
							<i class="fa-solid fa-handshake-simple"></i></i><span>Quản lý mặt hàng</span>
						</a>
					</li>
				</ul>
				<ul class="categories__button">
					<li class="categories__item-button">
						<a class="nav-link" href="@Url.Action("Logout", "Login")">
							<i class="fas fa-right-from-bracket"></i>Đăng xuất
						</a>
					</li>
				</ul>
			</div>
			<div style="width: 20%"></div>
			@RenderBody()
		</div>
	</div>
	@await RenderSectionAsync("Scripts", required: false)
	<script src="~/js/sidebar.js"></script>
</body>
</html>